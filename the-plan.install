post_install() {
  chmod +x /usr/bin/$pkgname
  wget --directory-prefix=/usr/share/applications/ https://www.dropbox.com/s/hwfiq4gd15oy9wm/the-plan.desktop
  wget --directory-prefix=/usr/share/pixmaps/ https://www.dropbox.com/s/rrjqbqgddulxszf/the-plan.png
  echo -e "To start game - \e[31m/usr/bin/the-plan \e[39m"
}
